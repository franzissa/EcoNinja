<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.econinja.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.econinja.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_challenge"
        android:name="com.example.econinja.ui.challenge.ChallengeFragment"
        android:label="Challenge"
        tools:layout="@layout/fragment_challenge" />

    <fragment
        android:id="@+id/navigation_share"
        android:name="com.example.econinja.ui.share.ShareFragment"
        android:label="Share"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.example.econinja.ui.info.InfoFragment"
        android:label="Share"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/navigation_reward"
        android:name="com.example.econinja.ui.reward.RewardFragment"
        android:label="Reward"
        tools:layout="@layout/fragment_reward" />
</navigation>